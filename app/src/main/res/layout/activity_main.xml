<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="411dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        android:hint="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorAccent"/>


    <EditText
        android:id="@+id/editTextArg1"
        android:layout_width="412dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:hint="arg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextArg2"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorAccent"/>

    <EditText
        android:id="@+id/editTextArg2"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:hint="arg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="405dp"
        android:layout_height="61dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="add"
        android:text="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextArg2" />

    <Button
        android:id="@+id/buttonDisplay"
        android:layout_width="407dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="displayList"
        android:text="display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="409dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:text="clear"
        android:onClick="clearList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDisplay"
        android:backgroundTint="@color/colorPrimary"/>


    <TextView
        android:id="@+id/labelName"
        android:layout_width="182dp"
        android:layout_height="55dp"
        android:layout_below="@id/buttonDisplay"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="182dp"
        android:layout_height="55dp"
        android:layout_below="@id/buttonDisplay"
        android:layout_marginTop="52dp"
        android:text="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/labelName"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/labelSum"
        android:layout_width="182dp"
        android:layout_height="55dp"
        android:layout_below="@id/buttonDisplay"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="sum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelName"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/sum"
        android:layout_width="182dp"
        android:layout_height="55dp"
        android:layout_below="@id/buttonDisplay"
        android:layout_marginTop="12dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/labelSum"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:textColor="@color/colorPrimaryDark"/>

</androidx.constraintlayout.widget.ConstraintLayout>